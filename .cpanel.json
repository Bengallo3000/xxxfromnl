{
  "version": 1.0,
  "build": {
    "backend": {
      "default": "nodejs",
      "requirements": ["nodejs"],
      "script": "npm run build"
    }
  },
  "hooks": {
    "build": [
      {
        "label": "Install dependencies",
        "event": "pre-build",
        "script": "npm install"
      },
      {
        "label": "Build application",
        "event": "build",
        "script": "npm run build"
      }
    ]
  }
}
