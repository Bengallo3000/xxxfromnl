FROM node:20-alpine

WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm ci

# Copy source code
COPY . .

# Build Next.js
RUN npm run build

# Create uploads directory
RUN mkdir -p public/uploads && chmod 755 public/uploads

# Expose port
EXPOSE 3000

# Start application
CMD ["npm", "start"]
